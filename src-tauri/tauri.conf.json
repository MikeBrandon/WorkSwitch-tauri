{
  "$schema": "https://raw.githubusercontent.com/nicedoc/schemas/master/tauri.conf.json",
  "productName": "WorkSwitch",
  "version": "1.0.0",
  "identifier": "com.workswitch.app",
  "build": {
    "frontendDist": "../frontend",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "WorkSwitch",
        "width": 820,
        "height": 600,
        "minWidth": 700,
        "minHeight": 500,
        "center": true,
        "decorations": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": ["nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ],
    "windows": {
      "nsis": {
        "installMode": "currentUser"
      }
    }
  }
}
